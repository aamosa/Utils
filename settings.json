// =========================================================
// My User Settings
// Date: July 10, 2022
// =========================================================
{
  "files.exclude": {
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
  },
  // ===============
  // Editor Settings
  // ===============
  "editor.tabSize": 2,
  "editor.fontSize": 13.5,
  "editor.fontWeight": "1",
  "editor.lineHeight": 1.20,
  "editor.showUnused": true,
  "editor.insertSpaces": true,
  "editor.fontLigatures": true,
  "editor.cursorStyle": "block",
  "editor.matchBrackets": "always",
  "editor.guides.indentation": true,
  "editor.detectIndentation": false,
  "editor.renderLineHighlight": "all",
  "editor.overviewRulerBorder": false,
  "files.trimTrailingWhitespace": true,
  "editor.renderWhitespace": "selection",
  "editor.fontFamily": "consolas, monospaced",
  "editor.bracketPairColorization.enabled": false,
  // -----------------
  // Editor scroll bar
  // -----------------
  "editor.scrollbar.vertical": "visible",
  "editor.scrollbar.horizontal": "visible",
  "editor.scrollbar.verticalScrollbarSize": 12,
  "editor.scrollbar.horizontalScrollbarSize": 12,
  // -----------------------
  // Editor hints and inlays
  // -----------------------
  "editor.inlayHints.enabled": "offUnlessPressed",
  "editor.quickSuggestions": {
    "other": true,
    "comments": true,
    "strings": true
  },
  "editor.hover.enabled": true,
  "editor.parameterHints.enabled": true,
  // -----------------
  // Terminal settings
  // -----------------
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.shellIntegration.enabled": true,
  // ---------------
  // Window settings
  // ---------------
  "window.zoomLevel": 0,
  "breadcrumbs.enabled": true,
  "window.commandCenter": true,
  "markdown.preview.lineHeight": 1,
  "explorer.openEditors.visible": 0,
  "telemetry.telemetryLevel": "off",
  // ==================
  // Workbench Settings
  // ==================
  "workbench.sideBar.location": "left",
  "workbench.editor.enablePreview": false,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  // -------------------------------
  // Workbench color customizations
  // -------------------------------
  "workbench.colorCustomizations": {                                                              
    // --------------
    // Window colors
    // --------------
    "statusBar.background": "#000000",
    "statusBarItem.settingsProfilesBackground": "#ff5c00",
    "statusBarItem.settingsProfilesForeground": "#e0dfdb",
    "breadcrumb.background": "#000000",
    "activityBar.background": "#101010",
    "activityBarBadge.foreground": "#ff5c00",
    "titleBar.activeBackground": "#000000",
    // -----------------
    // Scroll bar colors
    // -----------------
    "scrollbarSlider.background": "#454545",
    "scrollbarSlider.hoverBackground": "#ff5c00",
    "scrollbarSlider.activeBackground": "#ff5c00",
    // -------------
    // Editor colors
    // -------------
    "editor.background": "#000000",
    "editor.foreground": "#a7adba",
    "editorCursor.foreground": "#999797",
    // info squiggle
    "editorInfo.foreground": "#ecb939CA",
    "editorInfo.background": "#00000000",
    "editorUnnecessaryCode.opacity": "#00000080", // 0.50 opacity
    // warning squiggle
    "editorWarning.foreground": "#ffff0022",
    // error squiggle
    "editorError.background": "#00000000",
    "editorError.border": "#ff0000",
    "editorError.foreground": "#ff000080",
    // ---------------------
    // Editor gutter colors
    // ---------------------
    "editorLineNumber.foreground": "#454545",
    "editorLineNumber.activeForeground": "#ff5c00",
    // --------------------------
    // Editor indent guide colors
    // --------------------------
    "editorIndentGuide.background": "#252525",
    "editorIndentGuide.activeBackground": "#135564",
    "activityBarBadge.background": "#000000",
    // ----------------------------------
    // Editor search and selection colors
    // ----------------------------------
    "editor.selectionBackground": "#135564",
    "editor.selectionHighlightBorder": "#e0301e",
    "editor.selectionHighlightBackground": "#641355",
    "editor.findMatchBackground": "#13644b",
    "editor.findMatchHighlightBackground": "#a32020",
    "editor.findMatchHighlightBorder": "#e0301e",
    "editor.lineHighlightBackground": "#252525",
    "editor.wordHighlightBackground": "#641355",                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                             
    "editor.wordHighlightStrongBorder": "#ff5c00",
    // ---------------------
    // Editor bracket colors
    // ---------------------
    "editorBracketMatch.border": "#ff5c00",
    "editorBracketMatch.background": "#000000",
    "editorBracketHighlight.foreground1": "#5caeef",
    "editorBracketHighlight.foreground2": "#dfb976",
    "editorBracketHighlight.foreground3": "#c172d9",
    "editorBracketHighlight.foreground4": "#4fb1bc",
    "editorBracketHighlight.foreground5": "#97c26c",
    "editorBracketHighlight.foreground6": "#abb2c0",
    "editorBracketHighlight.unexpectedBracket.foreground": "#ff0000",
    // ----------
    // Tab colors
    // ----------
    "tab.activeModifiedBorder": "#ff5c00",
    "tab.inactiveModifiedBorder": "#454545",
    "tab.unfocusedActiveModifiedBorder": "#ff0000",
    "tab.unfocusedInactiveModifiedBorder": "#ff0000",
    "editorInlayHint.foreground": "#8f959b",
    "editorInlayHint.background": "#282a36",
    "editorGroupHeader.border": "#000000",
    "editorGroupHeader.tabsBackground": "#000000",
    // "editorGroupHeader.tabsBorder": "#000000"
  },
  // =================================
  // Editor Token Color Customizations
  // =================================
  "editor.tokenColorCustomizations": {
    "variables": "#A2ABBD",
    "keywords": "#C0CAF5",
    "comments": "#6C6C6C",
    "strings": "#CE9178",
    "numbers": "#EB8C00",
    "textMateRules": [
      {
        // global comments
        "scope": "comment",
        "settings": {
          "fontStyle": "italic"
        }
      },
      {
        "scope": [
          "keyword.other.documentation.javadoc.java"
        ],
        "settings": {
          "foreground": "#008080",
          "fontStyle": "italic"
        }
      },
      {
        "scope": [
          "entity.name.namespace",
          "keyword.other.import.java"
        ],
        "settings": {
          "foreground": "#79C0FF"
        }
      },
      {
        "scope": [
          "storage.modifier",
          "storage.type.primitive.java",
          "storage.type.primitive.array.java",
          "entity.name.type.class",
        ],
        "settings": {
          "foreground": "#C0CAF5"
        }
      },
      {
        "scope": [
          "support.function",
          "entity.name.type.parameter",
          "entity.name.type.interface"
        ],
        "settings": {
          "foreground": "#4EC9B0"
        }
      },
      {
        "scope": [
          "meta.tag",
          "entity.name.tag",
          "support.variable",
          "storage.type",
          "variable.language",
          "entity.other.inherited-class",
          "punctuation.definition.tag.begin",
          "punctuation.definition.tag.end",
          "entity.other.attribute-name",
          "entity.name.tag support.class.component",
        ],
        "settings": {
          "foreground": "#A2ABBD",
          "fontStyle": ""
        }
      },
      {
        "scope": [
          // general
          "keyword.control.new",
          "keyword.operator.logical",
          "keyword.operator.bitwise",
          "keyword.operator.comparison",
          "keyword.operator.assignment",
          "keyword.operator.instanceof",
          "punctuation.bracket.angle",
          "punctuation.bracket.square",
          "punctuation.separator.delimiter",
          "storage.type.function.arrow",
          // JavaScript
          "punctuation.section.embedded.begin.js",
          "punctuation.section.embedded.end.js",
          "punctuation.definition.template-expression.begin.js",
          "punctuation.definition.template-expression.end.js"
        ],
        "settings": {
          "foreground": "#FF5C00"
        }
      },
      {
        "scope": [
          // general
          "entity.name.function",
          "entity.name.function.member"
        ],
        "settings": {
          "foreground": "#BB9AF7"
        }
      },
      {
        "scope": [
          // general
          "variable.other",
          "meta.object.member",
          "variable.parameter",
          "variable.parameter.function",
          "variable.other.constant",
          "variable.other.readwrite",
          "support.type.property-name",
          "variable.other.definition"
        ],
        "settings": {
          "foreground": "#A2ABBD",
          "fontStyle": ""
        }
      }
    ]
  },
  // ===================
  // Extension Settings
  // ===================
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  // ------------------------
  // Java extension settings
  // ------------------------
  "java.configuration.runtimes": [
    {
      "name": "jdk-11",
      "path": "/usr/lib/jvm/java-11-openjdk-amd64",
      "default": true
    }
  ],
  "redhat.telemetry.enabled": false,
  "java.quickfix.showAt": "problem",
  "java.completion.importOrder": [
    "java",
    "javax",
    "org",
    "com"
  ],
  // ----------------------------------
  // Java extension compiler settings
  // ----------------------------------
  "java.settings.url": "~/.settings/org.eclipse.jdt.core.prefs",
  "java.format.onType.enabled": true,
  "java.server.launchMode": "Standard",
  "java.recommendations.dependency.analytics.show": false,
  // ----------------------------------
  // TODO highlight extension settings
  // ----------------------------------
  "todohighlight.isEnable": true,
  "todohighlight.isCaseSensitive": true,
  "todohighlight.keywordsPattern": "TODO:|FIXME:|NOTE:",
  "todohighlight.defaultStyle": {
    "color": "#ffb600",
    "backgroundColor": "#242a31",
    "overviewRulerColor": "#ffab00",
    "fontStyle": "normal",
    "fontWeight": "0",
    "cursor": "pointer",
    "border": "solid 1px #242a31",
    "borderRadius": "4px",
    "isWholeLine": false,
  },
  "editor.minimap.enabled": false,
  // -----------------------------
  // Spellcheck extension settings
  // -----------------------------
  "cSpell.userWords": [
    "classpath",
    "consolas",
    "javadoc",
    "javax",
    "Mockito",
    "monospaced",
    "oahmed",
    "prefs",
    "quickfix",
    "readwrite",
    "runtimes",
    "todohighlight",
    "vertapp",
    "Verticle",
    "vertx",
    "vsintellicode",
    "webflux"
  ]
}
